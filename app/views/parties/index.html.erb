<h1>Listing parties</h1>

<table>
  <tr>
    <th>Event</th>
    <th>Flyer</th>
    <th>Paying audience</th>
    <th>Gross profit</th>
    <th>Net profit</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @parties.each do |party| %>
  <tr>
    <td><%= party.event %></td>
    <td><%= party.flyer %></td>
    <td><%= party.paying_audience %></td>
    <td><%= party.gross_profit %></td>
    <td><%= party.net_profit %></td>
    <td><%= link_to 'Show', party %></td>
    <td><%= link_to 'Edit', edit_party_path(party) %></td>
    <td><%= link_to 'Destroy', party, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

